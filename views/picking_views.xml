<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_picking_barcode_inherit_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form position="inside">
                    <field name="_barcode_scanned" widget="barcode_handler"/>
                    <field name="barcode_product_id" invisible="1"/>
                </form>
                <!--
                <field name="name" position="before">
                    <field 
                        name="is_alertes"
                        style="background-color:orange;font-size:13pt" 
                        attrs="{'invisible': [('is_alertes','=', False)],'readonly':True}"/>
                </field>
                -->
            </field>
        </record>


        <record id="view_picking_type_form" model="ir.ui.view">
            <field name="name">Picking Types</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <field name="sequence_id" position="after">
                    <field name="product_barcode_scanner"/>
                </field>
            </field>

        </record>




    </data>
</odoo>
